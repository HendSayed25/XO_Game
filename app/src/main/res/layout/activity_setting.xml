<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">


<ImageView
    android:id="@+id/backGround"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/blue"
    />

    <TextView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Setting"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:fontFamily="@font/chrustyrock_orla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound"
        android:textSize="30sp"
        android:layout_margin="50dp"
        android:fontFamily="@font/chrustyrock_orla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backGround" />


    <ImageView
        android:id="@+id/sound_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="35dp"
        android:src="@drawable/withsound_icon"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sound"
        app:layout_constraintTop_toBottomOf="@id/backGround" />


    <ImageView
        android:id="@+id/noSound_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="35dp"
        android:src="@drawable/withsound_icon"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sound"
        app:layout_constraintTop_toBottomOf="@id/backGround" />

    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="language"
        android:textSize="30sp"
        android:layout_margin="50dp"
        android:fontFamily="@font/chrustyrock_orla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sound" />


    <ImageView
        android:id="@+id/language_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="50dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/english_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/language"
        app:layout_constraintTop_toBottomOf="@id/sound_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>